# Environment Variables for Friendoria

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/friendoria"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Google OAuth
# compte google : friendoria.appli@gmail.com PWD:googleFreindoria
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth
# compte facebook https://www.facebook.com/profile.php?id=61583937706000 PWD:facebookFreindoria
FACEBOOK_CLIENT_ID="your-facebook-app-id"
FACEBOOK_CLIENT_SECRET="your-facebook-app-secret"

# Apple OAuth (optional)
APPLE_ID="your-apple-id"
APPLE_SECRET="your-apple-secret"

# AWS Configuration
AWS_REGION="eu-west-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"

# AWS S3 Buckets
S3_BUCKET_USERS="friendoria-users"
S3_BUCKET_EVENTS="friendoria-events"
S3_BUCKET_MEDIA="friendoria-media"

# AWS SES (Email)
SES_FROM_EMAIL="friendoria.appli@gmail.com"
SES_FROM_NAME="Friendoria"

# AWS SNS (SMS - optional)
SNS_ENABLED="false"
SNS_SENDER_ID="Friendoria"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Friendoria"
